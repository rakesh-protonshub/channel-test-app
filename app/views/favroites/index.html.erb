<p id="notice"><%= notice %></p>

<h1>Favroites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favroites.each do |favroite| %>
      <tr>
        <td><%= favroite.user_id %></td>
        <td><%= favroite.show_id %></td>
        <td><%= link_to 'Show', favroite %></td>
        <td><%= link_to 'Edit', edit_favroite_path(favroite) %></td>
        <td><%= link_to 'Destroy', favroite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

